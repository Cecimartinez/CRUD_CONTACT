@model List<ContactoModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Lista de Contactos</h1>

<div class="card">
    <div class="card-body">
        <a asp-action="Guardar" asp-controller="Contact" class="btn btn-outline-primary">Crear Nuevo</a>
        <hr />
        <table class="table table-striped table-bordered table-borderless text-lg-start">
                <thead>
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Teléfono</th>
                        <th scope="col">Correo</th>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @foreach (var item in Model)
                    {
                        <tr>
                        <td class="fw-normal" scope="row">@item.Nombre</td>
                        <td class="fw-normal" scope="row">@item.Telefono</td>
                        <td class="fw-normal" scope="row">@item.Correo</td>
                        <td class="fw-normal">
                            <a asp-action="Editar" asp-controller="Contact" class=" btn btn-outline-primary mt-0  btn-sm" asp-route-IdContacto="@item.IdContacto">Editar</a>
                            <a asp-action="Eliminar" asp-controller="Contact" class="btn btn-outline-danger btn-sm  mt-0 " asp-route-IdContacto="@item.IdContacto">Eliminar</a>

                            </td>
                        </tr>
                    }
                    </tr>
                   
                </tbody>
        </table>
    
    </div>
</div>

